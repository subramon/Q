return require 'Q/UTILS/lua/code_gen' {

   declaration = [[

#include "q_incs.h"
#include <omp.h>
#include "q_macros.h"
//START_FOR_CDEF
extern int
${fn}(  
      const ${ctype} * restrict invals,  
      uint32_t n_invals,
      ${ctype} *lb, // [nb]
      ${ctype} *ub, // [nb]
      uint64_t *cnt, // [nb]
      uint32_t nb,
      ${ctype} * restrict outvals
      )
;
//STOP_FOR_CDEF

   ]],
   definition = [[

#include "${fn}.h"

int
${fn}(  
      const ${ctype} * restrict invals,  
      uint32_t n_invals,
      ${ctype} *lb, // [nb]
      ${ctype} *ub, // [nb]
      uint64_t *off, // [nb]
      uint32_t nb,
      ${ctype} * restrict outvals
      )

{
  int status = 0;
  uint32_t *bin_num = NULL;
  bin_num = malloc(n_invals * sizeof(uint32_t));
  for ( uint32_t i = 0; i < n_invals; i++ ) { bin_num[i] = -1; }
#ifdef DEBUG
  if ( nb == 0 ) { go_BYE(-1); }
  for ( uint32_t i = 0; i < nb; i++ )  {
    if ( lb[i] >= ub[i] ) { go_BYE(-1); } 
  }
  int max_num_probes = 1;
  for ( uint32_t n = nb; n > 1; n = n / 2 ) { 
    max_num_probes++;
  }
#endif

#pragma omp parallel for schedule(static, 1024)
  for ( uint32_t i  = 0; i < n_invals; i++ ) {
    if ( status < 0 ) { continue; }
    ${ctype} inval = invals[i];
#ifdef DEBUG
    if ( ( inval < lb[0] ) || ( inval > ub[nb-1] ) )  { WHEREAMI; status = -1; }
#endif
    // find correct bin for inval
    int lb_idx = 0;
    int ub_idx = (int)nb;
    int bin_idx = -1; 
    for ( int num_probes = 0; ; num_probes++ ) {
#ifdef DEBUG
      if ( num_probes > max_num_probes ) { WHEREAMI; status = -1; } 
#endif
      bin_idx = (lb_idx+ub_idx)/2;
      ${ctype} this_lb = lb[bin_idx];
      ${ctype} this_ub = ub[bin_idx];
      if ( ( inval >= this_lb ) && ( inval < this_ub ) ) {
        break;
      }
      else if ( inval < this_lb ) { 
        ub_idx = bin_idx;
      }
      else if ( inval >= this_ub ) { 
        lb_idx = bin_idx;
      }
      else {
        WHEREAMI; status = -1;
      }
    }
#ifdef DEBUG
    if ( ( bin_idx < 0 ) || ( bin_idx >= (int)nb ) ) { status = -1; }
#endif
     bin_num[i] = bin_idx;
  }
  cBYE(status);

// Having found the bin, we need to place the item. 
  int nT = omp_get_num_procs();
  int num_placed = 0;
#pragma omp parallel 
  for ( uint32_t i  = 0; i < n_invals; i++ ) {
    int tid = omp_get_thread_num();
    // get the i^{th} item 
    ${ctype} inval = invals[i];
    // determine which bin this item goes into 
    int bin_idx = bin_num[i];
#ifdef DEBUG
    if ( ( bin_idx < 0 ) || ( bin_idx >= (int)nb ) ) { status = -1; }
#endif
    if ( ( bin_idx % nT ) == tid ) { // if this bin belongs to me 
      // place item in bin
      uint64_t offset = off[bin_idx];
      outvals[offset] = inval; 
      off[bin_idx]++;
#ifdef DEBUG
      __atomic_add_fetch(&num_placed, 1, 0); 
#endif
    }
  }
#ifdef DEBUG
  if ( num_placed != (int)n_invals ) { go_BYE(-1); }
#endif
BYE:
  free_if_non_null(bin_num);
  return status;
}
   ]]
}
